{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["DOM", "ES2020"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["src/*", "./demo.js"]
}
